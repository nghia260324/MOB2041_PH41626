<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChaoActivity"
    android:id="@+id/relativeLayout_Chao"
    android:background="@color/blue_A400">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_chao_layout_1"/>
    <ImageView
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/fpt_polytechnic"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/bgr_chao_layout_2">
        <ImageView
            android:id="@+id/logo_chao"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:background="@drawable/logo_chao"/>
        <TextView
            android:textColor="@color/blue_A400"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textSize="28sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo_chao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"/>
    </RelativeLayout>


</RelativeLayout>