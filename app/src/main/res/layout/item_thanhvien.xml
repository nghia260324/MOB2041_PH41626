<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_matv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã TV: 01"
                android:textSize="16sp"
                android:textColor="@color/gray_4d0"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_hoten"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên TV: Nguyễn Văn A"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_namsinh"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm sinh: 2004"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/img_delete"/>
    </RelativeLayout>
</RelativeLayout>